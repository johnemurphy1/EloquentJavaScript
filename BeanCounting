//function that takes a string as its only argument and returns a number that indicates how many uppercase B characters there are in the string
function constB(str){
  let count = 0,len=str.length;
  for(let i = 0; i<str.length; i++){
    if(/B/.test(str.charAt(i))) count++;
    
  }
return count;
}

console.log(constB("Bird"));
