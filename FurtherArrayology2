// This takes an array and an index & returns new array this is copy of original array with element at given index removed.
function remove(array, index){
  return array.slice(0, index).concat(array.slice(index + 1));
}

console.log(remove(["a","b","c","d","e"], 2));
console.log(remove(["a","b","c","d","e"], 1));
console.log(remove(["a","b","c","d","e"], 3));
